/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/*home*/

.cover-picture image{
  width:100%;
}

.user-info{
  position: absolute;
  top:390rpx;
  right: 40rpx;
  vertical-align: middle;
  color:#fff;
  display: flex;
  align-items: center;
}

.user-nickname{
  padding-bottom: 40rpx;
}

.user-avatar{
  width:128rpx;
  height:128rpx;
  margin-left:20rpx;
}

/*message*/
.message-content{
  margin-top:40rpx;
}
.message-item{
  padding:10rpx 36rpx 20rpx;
  border-bottom: 1px solid #e2e2e2;
  display: flex;
  /*flex-direction:row|row-reverse|column|column-reverse*/
  /*flex-wrap:nowrap|wrap|wrap-reverse*/
  /*justify-content:flex-start|flex-end|center|space-between|space-around*/
  /*align-items:flex-start|flex-end|center|baseline|stretch*/
  /*align-content:*/
  flex-direction: row;
}
.item-right{
  font-size: 28rpx;
  width:100%;
}
.item-right .item{
  padding:5rpx 0;
}
.item-avatar{
  width:74rpx;
  height:74rpx;
  margin-right:40rpx;
}

.item-nickname{
  color:#576b95;
}
.item-picture{
 
}
.item-picture .item-picture-wrap{
  margin-top:20rpx;
  display: flex;
  justify-content: space-between;
}
.item-picture-wrap>image{
  width: 160rpx;
}


.item-address{
  color:#576b95;
  font-size: 24rpx;
}
.item-time-and-from{
  color:#b1b1b1;
  font-size:24rpx;
  position: relative;
}
.item-panel{
  position: absolute;
  right:0;
  top:0;
}
.item-panel .icon-panel{
  width:40rpx;
  height:28rpx;
}
